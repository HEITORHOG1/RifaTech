@page "/admin/relatorios"
@using System.Net.Http.Json
@using RifaTech.DTOs.DTOs
@using RifaTech.DTOs.DTOs.AdminDashboard
@using RifaTech.UI.Shared.Config
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http
@inject ISnackbar Snackbar
@implements IDisposable

<PageTitle>Relatórios - Admin RifaTech</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Typo="Typo.h4" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Assessment" Class="mr-2" />
        Relatórios
    </MudText>

    <!-- Filtro de Período -->
    <MudPaper Elevation="3" Class="pa-4 mb-6">
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudDatePicker Label="Data Inicial" @bind-Date="_startDate"
                               Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudDatePicker Label="Data Final" @bind-Date="_endDate"
                               Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="4" Class="d-flex align-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary"
                           OnClick="LoadReportAsync" Disabled="_loading"
                           StartIcon="@Icons.Material.Filled.Search">
                    Gerar Relatório
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (_loading)
    {
        <MudContainer Class="d-flex flex-column align-center justify-center my-8">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.body1" Class="mt-4">Gerando relatório...</MudText>
        </MudContainer>
    }
    else if (_stats != null)
    {
        <!-- Resumo Geral -->
        <MudText Typo="Typo.h5" Class="mb-3">Resumo Geral</MudText>
        <MudGrid Class="mb-6">
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="3" Class="pa-4 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.ConfirmationNumber" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h4" Class="mt-2">@_stats.TotalRifas</MudText>
                    <MudText Typo="Typo.caption">Total de Rifas</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="3" Class="pa-4 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" Color="Color.Success" Size="Size.Large" />
                    <MudText Typo="Typo.h4" Class="mt-2">@_stats.TotalTickets</MudText>
                    <MudText Typo="Typo.caption">Tickets Vendidos</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="3" Class="pa-4 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Warning" Size="Size.Large" />
                    <MudText Typo="Typo.h4" Class="mt-2">R$ @_stats.MonthRevenue.ToString("N2")</MudText>
                    <MudText Typo="Typo.caption">Receita do Mês</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="3" Class="pa-4 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Info" Size="Size.Large" />
                    <MudText Typo="Typo.h4" Class="mt-2">@_stats.TotalClientes</MudText>
                    <MudText Typo="Typo.caption">Total de Clientes</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <!-- Top Rifas Mais Vendidas -->
        @if (_topRifas?.Any() == true)
        {
            <MudText Typo="Typo.h5" Class="mb-3 mt-4">Rifas Mais Vendidas</MudText>
            <MudTable Items="_topRifas" Hover="true" Striped="true" Elevation="3" Class="mb-6">
                <HeaderContent>
                    <MudTh>Rifa</MudTh>
                    <MudTh>Tickets Vendidos</MudTh>
                    <MudTh>Progresso</MudTh>
                    <MudTh>Receita</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Rifa">@context.Name</MudTd>
                    <MudTd DataLabel="Tickets">@context.TicketsSold</MudTd>
                    <MudTd DataLabel="Progresso">
                        <MudProgressLinear Color="Color.Primary" Value="@((double)context.PercentageSold)"
                                           Max="100" Rounded="true" Size="Size.Medium" />
                    </MudTd>
                    <MudTd DataLabel="Receita">R$ @context.TotalRevenue.ToString("N2")</MudTd>
                </RowTemplate>
            </MudTable>
        }

        <!-- Vendas Recentes -->
        @if (_recentSales?.Any() == true)
        {
            <MudText Typo="Typo.h5" Class="mb-3 mt-4">Vendas Recentes</MudText>
            <MudTable Items="_recentSales" Hover="true" Striped="true" Elevation="3">
                <HeaderContent>
                    <MudTh>Ticket</MudTh>
                    <MudTh>Rifa</MudTh>
                    <MudTh>Cliente</MudTh>
                    <MudTh>Data</MudTh>
                    <MudTh>Valor</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Ticket">#@context.TicketNumber</MudTd>
                    <MudTd DataLabel="Rifa">@context.RifaName</MudTd>
                    <MudTd DataLabel="Cliente">@context.ClienteName</MudTd>
                    <MudTd DataLabel="Data">@context.PurchaseTime.ToString("dd/MM/yyyy HH:mm")</MudTd>
                    <MudTd DataLabel="Valor">R$ @context.TicketPrice.ToString("N2")</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager PageSizeOptions="new int[] { 10, 25, 50 }" />
                </PagerContent>
            </MudTable>
        }
    }
</MudContainer>

@code {
    private AdminDashboardStatsDTO? _stats;
    private List<TopSellingRifaDTO>? _topRifas;
    private List<RecentTicketSaleDTO>? _recentSales;
    private bool _loading = true;
    private DateTime? _startDate = DateTime.Today.AddMonths(-1);
    private DateTime? _endDate = DateTime.Today;
    private CancellationTokenSource _cts = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReportAsync();
    }

    private async Task LoadReportAsync()
    {
        try
        {
            _loading = true;
            StateHasChanged();

            // Carregar dados em paralelo
            var statsTask = Http.GetFromJsonAsync<AdminDashboardStatsDTO>(
                "/admin/dashboard/stats", _cts.Token);
            var topRifasTask = Http.GetFromJsonAsync<List<TopSellingRifaDTO>>(
                "/admin/rifas/top-selling?count=10", _cts.Token);
            var recentSalesTask = Http.GetFromJsonAsync<List<RecentTicketSaleDTO>>(
                "/admin/tickets/recent-sales?count=20", _cts.Token);

            await Task.WhenAll(statsTask, topRifasTask, recentSalesTask);

            _stats = await statsTask;
            _topRifas = await topRifasTask ?? new();
            _recentSales = await recentSalesTask ?? new();
        }
        catch (OperationCanceledException) { }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao gerar relatório: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    public void Dispose() => _cts.Cancel();
}
