@page "/admin/config"
@using System.Net.Http.Json
@using RifaTech.DTOs.DTOs
@using RifaTech.UI.Shared.Config
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@implements IDisposable

<PageTitle>Configurações - Admin RifaTech</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h4" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-2" />
        Configurações
    </MudText>

    <MudTabs Elevation="3" Rounded="true" PanelClass="pa-6">
        <!-- Aba Gerenciamento de Usuários -->
        <MudTabPanel Text="Usuários" Icon="@Icons.Material.Filled.People">
            @if (_loadingUsers)
            {
                <MudProgressCircular Indeterminate="true" Class="my-4" />
            }
            else
            {
                <MudTable Items="_users" Hover="true" Striped="true" Dense="true" Class="mt-2">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">Gerenciar Usuários</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="_userSearch" Placeholder="Buscar usuário..."
                                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                                      IconSize="Size.Medium" Class="mt-0" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Nome</MudTh>
                        <MudTh>Email</MudTh>
                        <MudTh>Role</MudTh>
                        <MudTh>Ações</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Nome">@(context.Name ?? context.Email)</MudTd>
                        <MudTd DataLabel="Email">@context.Email</MudTd>
                        <MudTd DataLabel="Role">
                            <MudChip T="string" Color="@(context.EhAdmin ? Color.Error : Color.Default)" Size="Size.Small">
                                @(context.EhAdmin ? "Admin" : "User")
                            </MudChip>
                        </MudTd>
                        <MudTd DataLabel="Ações">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small"
                                           Color="Color.Primary" OnClick="@(() => EditUserRole(context))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small"
                                           Color="Color.Error" OnClick="@(() => DeleteUserAsync(context))" />
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager PageSizeOptions="new int[] { 10, 25, 50 }" />
                    </PagerContent>
                </MudTable>
            }
        </MudTabPanel>

        <!-- Aba Informações do Sistema -->
        <MudTabPanel Text="Sistema" Icon="@Icons.Material.Filled.Info">
            <MudGrid Class="mt-2">
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="2" Class="pa-4">
                        <MudText Typo="Typo.h6" Class="mb-3">Informações da API</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Api">
                                URL da API: <strong>@AppConfig.Api.BaseUrl</strong>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Storage">
                                Ambiente: <strong>Development</strong>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Code">
                                Framework: <strong>.NET 9.0</strong>
                            </MudListItem>
                        </MudList>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="2" Class="pa-4">
                        <MudText Typo="Typo.h6" Class="mb-3">Integrações</MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Payment">
                                Pagamento: <strong>MercadoPago PIX</strong>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Email">
                                Notificações: <strong>Email + WhatsApp</strong>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Security">
                                Autenticação: <strong>JWT Bearer</strong>
                            </MudListItem>
                        </MudList>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</MudContainer>

@code {
    private List<UserDTO>? _users;
    private bool _loadingUsers = true;
    private string _userSearch = "";
    private CancellationTokenSource _cts = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        try
        {
            _loadingUsers = true;
            _users = await Http.GetFromJsonAsync<List<UserDTO>>(
                AppConfig.Api.Endpoints.Users, _cts.Token) ?? new();
        }
        catch (OperationCanceledException) { }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar usuários: {ex.Message}", Severity.Error);
            _users = new();
        }
        finally
        {
            _loadingUsers = false;
        }
    }

    private async Task EditUserRole(UserDTO user)
    {
        var newRole = user.EhAdmin ? "User" : "Admin";
        var confirm = await DialogService.ShowMessageBox(
            "Alterar Role",
            $"Alterar role de '{user.Email}' para '{newRole}'?",
            yesText: "Confirmar", cancelText: "Cancelar");

        if (confirm == true)
        {
            try
            {
                var roleUpdate = new RoleUpdateDTO { Role = newRole };
                var response = await Http.PutAsJsonAsync(
                    $"{AppConfig.Api.Endpoints.Users}/{user.Id}/role", roleUpdate);

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add($"Role atualizada para {newRole}.", Severity.Success);
                    await LoadUsersAsync();
                }
                else
                {
                    Snackbar.Add("Erro ao atualizar role.", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Erro: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteUserAsync(UserDTO user)
    {
        var confirm = await DialogService.ShowMessageBox(
            "Excluir Usuário",
            $"Tem certeza que deseja excluir '{user.Email}'? Esta ação não pode ser desfeita.",
            yesText: "Excluir", cancelText: "Cancelar");

        if (confirm == true)
        {
            try
            {
                var response = await Http.DeleteAsync($"{AppConfig.Api.Endpoints.Users}/{user.Id}");
                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Usuário excluído.", Severity.Success);
                    await LoadUsersAsync();
                }
                else
                {
                    Snackbar.Add("Erro ao excluir usuário.", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Erro: {ex.Message}", Severity.Error);
            }
        }
    }

    public void Dispose() => _cts.Cancel();
}
