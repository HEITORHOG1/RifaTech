@using MudBlazor

<MudNavMenu Class="py-2">
    <MudNavLink Href="/"
                Icon="@Icons.Material.Filled.Home"
                Match="NavLinkMatch.All">
        Início
    </MudNavLink>

    <MudNavGroup Title="Rifas"
                 Icon="@Icons.Material.Filled.CardGiftcard"
                 Expanded="true">
        <MudNavLink Href="/rifas"
                    Icon="@Icons.Material.Filled.List"
                    Match="NavLinkMatch.Prefix">
            Rifas Disponíveis
        </MudNavLink>

        <MudNavLink Href="/rifas/minhas"
                    Icon="@Icons.Material.Filled.Bookmark"
                    Match="NavLinkMatch.Prefix">
            Minhas Rifas
        </MudNavLink>

        <MudNavLink Href="/rifas/criar"
                    Icon="@Icons.Material.Filled.Add"
                    Match="NavLinkMatch.Prefix">
            Criar Rifa
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Tickets"
                 Icon="@Icons.Material.Filled.ConfirmationNumber">
        <MudNavLink Href="/tickets/meus"
                    Icon="@Icons.Material.Filled.Receipt"
                    Match="NavLinkMatch.Prefix">
            Meus Tickets
        </MudNavLink>

        <MudNavLink Href="/tickets/comprar"
                    Icon="@Icons.Material.Filled.ShoppingCart"
                    Match="NavLinkMatch.Prefix">
            Comprar Tickets
        </MudNavLink>
    </MudNavGroup>

    @if (IsAdmin)
    {
        <MudNavGroup Title="Administração"
                     Icon="@Icons.Material.Filled.AdminPanelSettings"
                     Color="Color.Error">
            <MudNavLink Href="/admin/usuarios"
                        Icon="@Icons.Material.Filled.People"
                        Match="NavLinkMatch.Prefix">
                Usuários
            </MudNavLink>

            <MudNavLink Href="/admin/pagamentos"
                        Icon="@Icons.Material.Filled.Payment"
                        Match="NavLinkMatch.Prefix">
                Pagamentos
            </MudNavLink>

            <MudNavLink Href="/admin/sorteios"
                        Icon="@Icons.Material.Filled.Event"
                        Match="NavLinkMatch.Prefix">
                Sorteios
            </MudNavLink>

            <MudNavLink Href="/admin/relatorios"
                        Icon="@Icons.Material.Filled.Assessment"
                        Match="NavLinkMatch.Prefix">
                Relatórios
            </MudNavLink>
        </MudNavGroup>
    }

    <MudDivider Class="my-2" />

    <MudNavLink Href="/ajuda"
                Icon="@Icons.Material.Filled.Help"
                Match="NavLinkMatch.Prefix">
        Ajuda e Suporte
    </MudNavLink>
</MudNavMenu>

@code {
    [Parameter]
    public bool IsAdmin { get; set; }
}